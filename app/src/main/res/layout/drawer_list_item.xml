<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listviewRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#011f4b"
    android:padding="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#2980b9">
        <TextView
            android:id="@+id/temperatureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_above="@+id/summary"
            android:layout_toRightOf="@+id/weatherTypeImage"
            android:layout_toEndOf="@+id/weatherTypeImage" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datetime"
            android:text="Date/Time"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_alignTop="@+id/temperatureText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/summary"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="Light rain starting in the afternoon"
            android:layout_below="@+id/weatherTypeImage"
            android:layout_alignLeft="@+id/temperatureText"
            android:layout_alignStart="@+id/temperatureText" />

        <ImageView
            android:id="@+id/weatherTypeImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/light_rain" />

    </RelativeLayout>

</RelativeLayout>