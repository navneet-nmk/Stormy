<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="20dp"
    android:background="#2980b9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempDText"
        android:text="Temperature"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/titleText"
        android:layout_marginTop="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:text="2 PM Light Rain"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/precipProbabilityText"
        android:text="Precip. Probability"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tempDText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windText"
        android:text="Wind"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/precipProbabilityText"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidityDText"
        android:text="Humidity"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/windText"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pressureDText"
        android:text="Pressure"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/humidityDText"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dewPointDtext"
        android:text="Dew Point"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/pressureDText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/okText"
        android:text="OK"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_below="@+id/dewPointDtext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
